pragma solidity ^0.8.19;

import "@openzeppelin/contracts/token/ERC20/ERC20.sol";
import "@openzeppelin/contracts/token/ERC20/extensions/ERC20Burnable.sol";
import "@openzeppelin/contracts/access/Ownable.sol";
import "@openzeppelin/contracts/security/Pausable.sol";

/**
 * @title SimpleDWCU
 * @dev 简化版DWCU代币合约
 */
contract SimpleDWCU is ERC20, ERC20Burnable, Ownable, Pausable {
    uint8 public constant DECIMALS = 18;
    uint256 public constant MAX_SUPPLY = 210000000 * 10**DECIMALS;
    
    uint256 public transferFee = 50; // 0.5%
    address public feeCollector;
    
    event FeeCollectorChanged(address indexed newCollector);
    event TransferFeeChanged(uint256 newFee);
    
    constructor() ERC20("Dogecoin Wrapped Coin Unit", "DWCU") {
        feeCollector = msg.sender;
        _mint(msg.sender, 21000000 * 10**DECIMALS); // 初始2100万枚
    }
    
    /**
     * @dev 铸造代币（仅所有者）
     */
    function mint(address to, uint256 amount) external onlyOwner {
        require(totalSupply() + amount <= MAX_SUPPLY, "Exceeds max supply");
        _mint(to, amount);
    }
    
    /**
     * @dev 设置费用收集器
     */
    function setFeeCollector(address newCollector) external onlyOwner {
        require(newCollector != address(0), "Invalid collector");
        feeCollector = newCollector;
        emit FeeCollectorChanged(newCollector);
    }
    
    /**
     * @dev 设置转账费用
     */
    function setTransferFee(uint256 newFee) external onlyOwner {
        require(newFee <= 500, "Fee too high"); // 最大5%
        transferFee = newFee;
        emit TransferFeeChanged(newFee);
    }
    
    /**
     * @dev 暂停合约
     */
    function pause() external onlyOwner {
        _pause();
    }
    
    /**
     * @dev 恢复合约
     */
    function unpause() external onlyOwner {
        _unpause();
    }
    
    /**
     * @dev 重写转账函数
     */
    function _transfer(
        address from,
        address to,
        uint256 amount
    ) internal override whenNotPaused {
        if (from == owner() || to == owner() || transferFee == 0) {
            super._transfer(from, to, amount);
        } else {
            uint256 fee = (amount * transferFee) / 10000;
            uint256 netAmount = amount - fee;
            
            super._transfer(from, feeCollector, fee);
            super._transfer(from, to, netAmount);
        }
    }
}
